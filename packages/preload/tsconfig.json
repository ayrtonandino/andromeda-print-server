{
    "compilerOptions": {
        "target": "ESNext",
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@app/*": ["../*"]
        },
        "types": ["node"],
        "strict": true,
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "../../types/**/*.d.ts"],
    "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
